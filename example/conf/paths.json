[
	{
		"path":"version",
		"methods":{
			"GET": {
				"controller": "controller::version",
				"method": "get",
				"in":null,
				"arg":null,
				"auth":["logged_in"],
				"out":"json",
				"arguments":[]
			}
		}
	},
	{
		"path":"login",
		"methods":{
			"POST": {
				"controller":"controller::login",
				"method":"post",
				"in": null,
				"arg": "json",
				"auth": [],
				"out": "json",
				"arguments":[
					{"name":"username", "source":"json", "type":"string"},
					{"name":"pass", "source":"json", "type":"string"}
				]
			}
		}
	},
	{
		"path": "contacts",
		"methods":{
			"GET": {
				"controller": "controller::contacts",
				"method": "get",
				"in":null,
				"arg":"query",
				"auth":["logged_in"],
				"out":"json",
				"arguments": [
					{"name":"filter_name", "source":"query", "type":"string", "nullable":true},
					{"name":"filter_number", "source":"query", "type":"string", "nullable": true}
				]
			},
			"POST": {
				"controller": "controller::contacts",
				"method": "post",
				"in":null,
				"arg":"json",
				"auth":["logged_in"],
				"out":"json",
				"arguments":[
					{"name":"name", "source":"json", "type":"string"},
					{"name":"phone", "source":"json", "type":"string"},
					{"name":"company", "source":"json", "type":"string", "optional":true, "default":"-"}
				]
			}
		}
	},
	{
		"path":"contacts/[id:int]",
		"methods":{
			"GET": {
				"controller": "controller::contacts",
				"method": "info",
				"in":null,
				"arg":"json",
				"auth":["logged_in"],
				"out":"json",
				"arguments":[
					{
						"name":"id", "source":"uri", "type":"int"
					}
				]
			},
			"PATCH": {
				"controller": "controller::contacts",
				"method": "patch",
				"in":null,
				"arg":"json",
				"auth":["logged_in"],
				"out":"json",
				"arguments":[
					{"name":"id", "source":"uri", "type":"int"},
					{"name":"name", "source":"json", "type":"string", "optional":true, "default":null},
					{"name":"phone", "source":"json", "type":"string", "optional":true, "default":null},
					{"name":"company", "source":"json", "type":"string", "optional":true, "default":null}
				]
			},
			"DELETE": {
				"controller": "controller::contacts",
				"method": "delete",
				"in":null,
				"arg":null,
				"auth":["logged_in"],
				"out":"json",
				"arguments":[
					{"name":"id", "source":"uri", "type":"int"}
				]
			}
		}
	}
]

